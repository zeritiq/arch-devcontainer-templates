{
    "name": "${templateOption:projectName} Workspace (Archlinux)",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".",
        "args": {
            "CONTAINER_NAME": "${templateOption:projectName}-workspace"
        }
    },
    "workspaceFolder": "/workspace/${templateOption:projectName}",
    "remoteUser": "vscode",
    "mounts": [
        "source=${templateOption:projectName}-home,target=/home/vscode,type=volume",
        "source=${templateOption:projectName}-workspace,target=/workspace/${templateOption:projectName},type=volume"
    ],
    "runArgs": [
        "--network=${templateOption:projectName}-workspace-network"
    ],
    "initializeCommand": [
        "docker", "network", "create", "--if-not-exists", "${templateOption:projectName}-workspace-network"
    ]
}
