{
    "id": "arch-base",
    "version": "1.0.0",
    "name": "Arch Linux Base",
    "description": "A development container based on Arch Linux with Docker, Git, and essential tools",
    "documentationURL": "https://github.com/zeritiq/devcontainer-templates/tree/main/src/arch-base",
    "licenseURL": "https://github.com/zeritiq/devcontainer-templates/blob/main/LICENSE",
    "options": {
        "projectName": {
            "type": "string",
            "default": "my-project",
            "description": "Project name (used for container and network names)"
        },
        "repoUrl": {
            "type": "string",
            "default": "",
            "description": "Git repository URL to clone (optional)"
        },
        "forwardPort": {
            "type": "string",
            "default": "8080",
            "description": "Port to forward to host"
        }
    },
    "platforms": [
        "linux/amd64",
        "linux/arm64"
    ]
}
